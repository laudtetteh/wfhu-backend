{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": "",
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "publish_at": {
      "type": "datetime"
    },
    "category": {
      "via": "posts",
      "model": "category"
    },
    "seo": {
      "type": "component",
      "component": "post.seo",
      "required": false,
      "repeatable": false
    },
    "description": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 200,
      "required": true,
      "minLength": 20
    },
    "keep_on_homepage": {
      "type": "boolean"
    }
  }
}
